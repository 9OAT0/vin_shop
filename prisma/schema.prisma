generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  location  String
  name      String
  password  String
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  pictures    String[] // Array ของ URL รูปภาพ
  price       Float?   @map("Price")
  size        String   @map("Size")
  description String   @map("description")
}